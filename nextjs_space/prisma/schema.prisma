generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model EarlyAccessApplication {
  id             String   @id @default(cuid())
  fullName       String
  email          String   @unique
  institution    String
  researchFocus  String
  role           String
  useCase        String
  createdAt      DateTime @default(now())
  
  // Link to user account
  user           User?    @relation(fields: [userId], references: [id])
  userId         String?  @unique

  @@map("early_access_applications")
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  password           String?
  fullName           String
  setupToken         String?   @unique
  setupTokenExpiry   DateTime?
  isAccountSetup     Boolean   @default(false)
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  
  // Link to application
  application        EarlyAccessApplication?

  @@map("users")
}
